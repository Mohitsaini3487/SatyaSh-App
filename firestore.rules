/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for the SatyaSh शोधak application.
 *
 * Data Structure:
 * - User profiles and their associated history data (fraud detection and AI summarization) are nested under `/users/{userId}`.
 *
 * Key Security Decisions:
 * - Users can only access their own profile and history data.
 * - User listing is disallowed to prevent information harvesting.
 * - Data consistency between the path and document ID is enforced on creation and updates.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secures user profile data, ensuring only the owner can read and write their own profile.
     * @path /users/{userId}
     * @allow (create) - Authenticated user with matching userId can create their profile.
     * @allow (get, update, delete) - Authenticated user with matching userId can get, update, and delete their profile.
     * @deny (create) - Authenticated user trying to create a profile with a different userId.
     * @deny (get, update, delete) - Authenticated user trying to get, update, or delete a profile with a different userId.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false; // User listing is not permitted.
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secures fraud detection history entries, ensuring only the owner can read and write their own history.
     * @path /users/{userId}/fraudDetectionHistory/{historyId}
     * @allow (create) - Authenticated user with matching userId can create a history entry.
     * @allow (get, update, delete) - Authenticated user with matching userId can get, update, and delete their history entry.
     * @deny (create) - Authenticated user trying to create a history entry with a different userId.
     * @deny (get, update, delete) - Authenticated user trying to get, update, or delete a history entry with a different userId.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/fraudDetectionHistory/{historyId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secures AI summarization history entries, ensuring only the owner can read and write their own history.
     * @path /users/{userId}/aiSummaryHistory/{historyId}
     * @allow (create) - Authenticated user with matching userId can create a history entry.
     * @allow (get, update, delete) - Authenticated user with matching userId can get, update, and delete their history entry.
     * @deny (create) - Authenticated user trying to create a history entry with a different userId.
     * @deny (get, update, delete) - Authenticated user trying to get, update, or delete a history entry with a different userId.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/aiSummaryHistory/{historyId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }
  }
}